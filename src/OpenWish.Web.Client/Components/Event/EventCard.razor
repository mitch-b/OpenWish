@using OpenWish.Web.Client.Components.Shared

@inject IEventService EventService
@inject ILogger<EventCard> Logger
@inject NavigationManager NavigationManager

@if (Event == null)
{
    <p>Loading...</p>
}
else
{
    <div class="card h-100 event-card" @onclick="NavigateToEvent">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-start">
                <h5 class="card-title mb-1">@Event.Name</h5>
                <span style="font-size: 1.5rem;">ðŸ“…</span>
            </div>
            <p class="card-text">
                <span class="badge bg-primary">@Event.Date.ToString("MMMM dd, yyyy")</span>
                @if (Event.IsGiftExchange)
                {
                    <span class="badge bg-success">Gift Exchange</span>
                }
            </p>
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">Created by @Event.CreatedBy?.UserName</small>
                <div class="dropdown d-inline-block">
                    <button class="btn btn-outline-secondary btn-sm kebab-menu"
                            type="button"
                            id="dropdownMenu@(Event.Id)"
                            data-bs-toggle="dropdown"
                            aria-expanded="false"
                            @onclick:stopPropagation="true">
                        â‹®
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenu@(Event.Id)">
                        <li>
                            <button class="dropdown-item text-danger"
                                    @onclick:stopPropagation="true"
                                    @onclick="ShowDeleteDialog">
                                Delete
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

}

<Dialog @ref="_deleteDialog" Title="@_deleteDialogTitle">
    <div class="modal-body">
        <p>@_deleteDialogMessage</p>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" @onclick="ConfirmDeleteAsync" disabled="@_isDeleting">
            @if (_isDeleting)
            {
                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
            }
            Delete
        </button>
        <button type="button" class="btn btn-secondary" @onclick="CloseDeleteDialog" disabled="@_isDeleting">
            Cancel
        </button>
    </div>
</Dialog>

@code {
    [Parameter]
    public EventModel? Event { get; set; }

    [Parameter]
    public EventCallback<EventModel> OnDelete { get; set; }

    private Dialog _deleteDialog = default!;
    private string _deleteDialogTitle = "Delete Event";
    private string _deleteDialogMessage = string.Empty;
    private bool _isDeleting;

    private void ShowDeleteDialog()
    {
        if (Event is null)
        {
            return;
        }

        _deleteDialogMessage = $"Are you sure you want to delete the event '{Event.Name}'? This action cannot be undone.";
        _deleteDialog.Show();
    }

    private void CloseDeleteDialog()
    {
        _deleteDialog.Close();
    }

    private async Task ConfirmDeleteAsync()
    {
        if (Event is null || _isDeleting)
        {
            return;
        }

        _isDeleting = true;

        try
        {
            Logger.LogInformation("Deleting event {EventId}", Event.Id);
            await EventService.DeleteEventAsync(Event.Id);

            if (OnDelete.HasDelegate)
            {
                await OnDelete.InvokeAsync(Event);
            }

            _deleteDialog.Close();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error deleting event {EventId}", Event.Id);
        }
        finally
        {
            _isDeleting = false;
            StateHasChanged();
        }
    }

    private void NavigateToEvent() => NavigationManager.NavigateTo($"/events/{Event?.Id}");
}
