@using OpenWish.Data.Entities

@if (Wishlist == null)
{
    <p>Loading...</p>
}
else
{
    <div class="wishlist-card">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Wishlist.Name</h5>
                <p class="card-text">
                    <span class="badge bg-primary">@(Wishlist.Items?.Count ?? 0) items</span>
                    @if (Wishlist.IsCollaborative)
                    {
                        <span class="badge bg-info">Collaborative</span>
                    }
                </p>
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">Created by @Wishlist.Owner?.UserName</small>
                    <a href="/wishlists/@Wishlist.Id" class="btn btn-outline-primary btn-sm">View</a>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public Wishlist? Wishlist { get; set; }
}