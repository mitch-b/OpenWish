@page "/friends"
@using OpenWish.Web.Client.Components.Social
@attribute [Authorize]

@rendermode InteractiveAuto

<PageTitle>Friends</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-12 mb-4">
            <h2>Friends</h2>
            <p class="text-muted">Connect with friends and manage your social connections.</p>
        </div>
    </div>

    <ul class="nav nav-tabs mb-3" id="friendsTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="manage-tab" type="button" role="tab">
                <i class="bi bi-people me-2"></i>Manage Friends
            </button>
        </li>
    </ul>

    <div class="tab-content" id="friendsTabsContent">
        <div class="tab-pane fade show active">
            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Find Friends</h5>
                        </div>
                        <div class="card-body">
                            <FriendSearch />
                        </div>
                    </div>
                    
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Friend Requests</h5>
                        </div>
                        <div class="card-body">
                            <FriendRequestList />
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">My Friends</h5>
                        </div>
                        <div class="card-body">
                            <FriendList />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<OpenWish.Web.Client.Components.Diagnostics.SessionInformation />

@code {
    // No additional functionality needed since we removed the wishlists tab
}