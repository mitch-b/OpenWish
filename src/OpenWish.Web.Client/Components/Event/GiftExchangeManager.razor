@using System
@using System.Collections.Generic
@using OpenWish.Shared.Models
@using OpenWish.Shared.Services

@inject IEventService EventService

<div class="card shadow-sm mb-4">
    <div class="card-header">
        <h3><i class="bi bi-gift"></i> Gift Exchange Management</h3>
    </div>
    <div class="card-body">
        @if (Event?.IsGiftExchange == true)
        {
            @if (Event.NamesDrawnOn.HasValue)
            {
                <div class="alert alert-success">
                    <i class="bi bi-check-circle-fill"></i> Names were drawn on @Event.NamesDrawnOn.Value.ToLocalTime().ToString("MMMM d, yyyy 'at' h:mm tt")
                </div>
                <p class="text-muted">All participants have been notified of their gift exchange matches via email.</p>

                <div class="mt-4">
                    <h5 class="text-danger">Reset Gift Exchange</h5>
                    <p class="text-muted">This will cancel all current gift assignments and allow you to draw names again. All participants will be notified via email.</p>

                    @if (!_showResetConfirm)
                    {
                        <button class="btn btn-outline-danger" @onclick="() => _showResetConfirm = true">
                            <i class="bi bi-arrow-clockwise"></i> Reset Gift Exchange
                        </button>
                    }
                    else if (!_showFinalConfirm)
                    {
                        <div class="alert alert-warning">
                            <p class="mb-2"><strong>‚ö†Ô∏è First Confirmation</strong></p>
                            <p class="mb-3">Are you sure you want to reset the gift exchange? This will cancel all current assignments.</p>
                            <button class="btn btn-warning me-2" @onclick="() => _showFinalConfirm = true">
                                <i class="bi bi-exclamation-triangle"></i> Yes, Continue
                            </button>
                            <button class="btn btn-secondary" @onclick="CancelReset">
                                Cancel
                            </button>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <p class="mb-2"><strong>üö® Final Confirmation</strong></p>
                            <p class="mb-3">This action cannot be undone. All participants will receive an email notification about the cancellation.</p>
                            <button class="btn btn-danger me-2" @onclick="ResetGiftExchange" disabled="@_resetting">
                                @if (_resetting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                    <span>Resetting...</span>
                                }
                                else
                                {
                                    <i class="bi bi-arrow-clockwise"></i>
                                    <span>Confirm Reset</span>
                                }
                            </button>
                            <button class="btn btn-secondary" @onclick="CancelReset" disabled="@_resetting">
                                Cancel
                            </button>
                        </div>
                    }

                    @if (_resetErrorMessage != null)
                    {
                        <div class="alert alert-danger mt-3">
                            <i class="bi bi-exclamation-circle"></i> @_resetErrorMessage
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="mb-4">
                    <h5>Ready to Draw Names?</h5>
                    <p class="text-muted">This will randomly assign each participant someone to shop for, respecting any exclusion rules you've set up below.</p>

                    @if (_participantCount < 2)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i> You need at least 2 participants to draw names. Currently: @_participantCount participant(s).
                        </div>
                    }
                    else
                    {
                        @if (!_showDrawConfirm)
                        {
                            <button class="btn btn-success btn-lg" @onclick="() => _showDrawConfirm = true">
                                <i class="bi bi-shuffle"></i>
                                <span>Start Draw Process</span>
                            </button>
                        }
                        else if (!_showFinalDrawConfirm)
                        {
                            <div class="alert alert-warning">
                                <p class="mb-2"><strong>‚ö†Ô∏è First Confirmation</strong></p>
                                <p class="mb-3">Participants will be issued a name, so it is hard to turn back once you've started the name drawing. Continue?</p>
                                <button class="btn btn-warning me-2" @onclick="() => _showFinalDrawConfirm = true">
                                    <i class="bi bi-exclamation-triangle"></i> Yes, keep going
                                </button>
                                <button class="btn btn-secondary" @onclick="CancelDrawConfirmation">
                                    Cancel
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger">
                                <p class="mb-2"><strong>üö® Final Confirmation</strong></p>
                                <p class="mb-3">Once names are drawn, every participant immediately receives their match. Participants will be issued a name, so it is hard to turn back once you've started the name drawing‚Äîrolling back means resetting the entire exchange.</p>
                                <button class="btn btn-success btn-lg me-2" @onclick="DrawNames" disabled="@_drawing">
                                    @if (_drawing)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                        <span>Drawing Names...</span>
                                    }
                                    else
                                    {
                                        <span>üéâ Draw Names Now!</span>
                                    }
                                </button>
                                <button class="btn btn-secondary" @onclick="CancelDrawConfirmation" disabled="@_drawing">
                                    Cancel
                                </button>
                            </div>
                        }

                        <p class="text-muted mt-2 small">
                            <i class="bi bi-people"></i> @_participantCount participants will be included in the draw.
                        </p>
                    }
                </div>

                @if (_errorMessage != null)
                {
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-circle"></i> @_errorMessage
                    </div>
                }

                <hr />

                <h5>Pairing Rules (Optional)</h5>
                <p class="text-muted small">Add exclusion rules to prevent certain people from being matched together (e.g., spouses, significant others).</p>

                @if (_pairingRules.Any())
                {
                    var renderedRuleIds = new HashSet<int>();
                    <div class="list-group mb-3 pairing-rule-list">
                        @foreach (var rule in _pairingRules)
                        {
                            if (!renderedRuleIds.Add(rule.Id))
                            {
                                continue;
                            }

                            var reciprocalRule = FindReciprocalRule(rule);
                            var isBidirectional = reciprocalRule is not null;

                            if (reciprocalRule is not null)
                            {
                                renderedRuleIds.Add(reciprocalRule.Id);
                            }

                            <div class="list-group-item pairing-rule-item">
                                <div class="d-flex flex-column flex-lg-row justify-content-between align-items-start gap-3">
                                    <div>
                                        <span>
                                            <strong>@FormatRuleParticipant(rule, true)</strong>
                                            cannot be matched with
                                            <strong>@FormatRuleParticipant(rule, false)</strong>
                                        </span>
                                    </div>
                                    <div class="d-flex flex-wrap gap-2 justify-content-end">
                                        <button type="button"
                                                class="btn btn-sm text-nowrap @(isBidirectional ? "btn-success" : "btn-outline-success")"
                                                title="@(isBidirectional ? "Limit the rule to only this direction" : "Apply the exclusion in both directions")"
                                                @onclick="() => ToggleBidirectionalRuleAsync(rule)">
                                            <i class="bi bi-arrow-left-right me-1" aria-hidden="true"></i>
                                            <span>@(isBidirectional ? "Limit to one way" : "Make both ways")</span>
                                        </button>
                                        <button type="button"
                                                class="btn btn-sm btn-outline-danger text-nowrap d-flex align-items-center gap-1"
                                                title="Remove this exclusion rule"
                                                @onclick="() => RemoveRule(rule.Id)">
                                            <i class="bi bi-trash3" aria-hidden="true"></i>
                                            <span>Remove</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }

                @if (_showAddRule)
                {
                    <div class="card surface-alt pairing-rule-card mb-3">
                        <div class="card-body">
                            <h6>Add Exclusion Rule</h6>
                            <div class="row g-2">
                                <div class="col-md-5">
                                    <label class="form-label">Person 1</label>
                                    <select class="form-select" @bind="_newRuleSourceKey">
                                        <option value="">Select...</option>
                                        @foreach (var participant in _participants)
                                        {
                                            <option value="@participant.Key">@participant.Label</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-5">
                                    <label class="form-label">Person 2</label>
                                    <select class="form-select" @bind="_newRuleTargetKey">
                                        <option value="">Select...</option>
                                        @foreach (var participant in _participants)
                                        {
                                            <option value="@participant.Key">@participant.Label</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-2 d-flex align-items-end">
                                    <button class="btn btn-primary w-100" @onclick="AddRule" disabled="@(DisableAddRuleButton)">
                                        <i class="bi bi-plus"></i> Add
                                    </button>
                                </div>
                            </div>
                            <button class="btn btn-sm btn-link" @onclick="() => _showAddRule = false">Cancel</button>
                        </div>
                    </div>
                }
                else
                {
                    <button class="btn btn-outline-primary" @onclick="() => _showAddRule = true">
                        <i class="bi bi-plus-circle"></i> Add Exclusion Rule
                    </button>
                }
            }
        }
        else
        {
            <p class="text-muted">This event is not configured as a gift exchange.</p>
        }
    </div>
</div>

@code {
    [Parameter] public EventModel? Event { get; set; }
    [Parameter] public string CurrentUserId { get; set; } = string.Empty;
    [Parameter] public EventCallback OnNamesDrawn { get; set; }

    private List<CustomPairingRuleModel> _pairingRules = new();
    private List<ParticipantOption> _participants = new();
    private bool _drawing = false;
    private bool _resetting = false;
    private bool _showAddRule = false;
    private bool _showResetConfirm = false;
    private bool _showFinalConfirm = false;
    private bool _showDrawConfirm = false;
    private bool _showFinalDrawConfirm = false;
    private string? _newRuleSourceKey;
    private string? _newRuleTargetKey;
    private string? _errorMessage;
    private string? _resetErrorMessage;
    private int _participantCount = 0;
    private bool DisableAddRuleButton =>
        string.IsNullOrEmpty(_newRuleSourceKey) ||
        string.IsNullOrEmpty(_newRuleTargetKey) ||
        string.Equals(_newRuleSourceKey, _newRuleTargetKey, StringComparison.Ordinal);

    protected override async Task OnParametersSetAsync()
    {
        if (Event != null)
        {
            await LoadPairingRules();
            LoadParticipants();
        }
    }

    private void LoadParticipants()
    {
        if (Event == null) return;

        _participants.Clear();

        bool HasUser(string userId) => _participants.Any(p => string.Equals(p.UserId, userId, StringComparison.Ordinal));
        bool HasEmail(string email) => _participants.Any(p => !string.IsNullOrEmpty(p.Email) && string.Equals(p.Email, email, StringComparison.OrdinalIgnoreCase));

        if (Event.CreatedBy != null)
        {
            _participants.Add(new ParticipantOption(
                $"user:{Event.CreatedBy.Id}",
                Event.CreatedBy.UserName ?? Event.CreatedBy.Email ?? "Event Owner",
                Event.CreatedBy.Id,
                Event.CreatedBy.Email));
        }

        if (Event.EventUsers != null)
        {
            foreach (var eventUser in Event.EventUsers.Where(eu => !eu.Deleted))
            {
                if (eventUser.User != null)
                {
                    if (!HasUser(eventUser.User.Id))
                    {
                        _participants.Add(new ParticipantOption(
                            $"user:{eventUser.User.Id}",
                            eventUser.User.UserName ?? eventUser.User.Email ?? "Participant",
                            eventUser.User.Id,
                            eventUser.User.Email));
                    }
                }
                else if (!string.IsNullOrWhiteSpace(eventUser.InviteeEmail))
                {
                    var normalizedEmail = eventUser.InviteeEmail.Trim();
                    if (!HasEmail(normalizedEmail))
                    {
                        _participants.Add(new ParticipantOption(
                            $"invite:{eventUser.Id}",
                            $"{normalizedEmail} (email invite)",
                            null,
                            normalizedEmail));
                    }
                }
            }
        }

        _participantCount = _participants.Count;
    }

    private async Task LoadPairingRules()
    {
        if (Event?.PublicId == null) return;

        try
        {
            var rules = await EventService.GetPairingRulesByPublicIdAsync(Event.PublicId);
            _pairingRules = rules.ToList();
        }
        catch (Exception)
        {
            // Ignore errors loading rules
        }
    }

    private async Task DrawNames()
    {
        if (Event?.PublicId == null) return;

        _drawing = true;
        _errorMessage = null;

        try
        {
            await EventService.DrawNamesByPublicIdAsync(Event.PublicId, CurrentUserId);
            await OnNamesDrawn.InvokeAsync();
            CancelDrawConfirmation();
        }
        catch (Exception ex)
        {
            _errorMessage = ex.Message;
        }
        finally
        {
            _drawing = false;
        }
    }

    private async Task AddRule()
    {
        _errorMessage = null;

        if (Event?.PublicId == null || string.IsNullOrEmpty(_newRuleSourceKey) || string.IsNullOrEmpty(_newRuleTargetKey))
        {
            return;
        }

        if (string.Equals(_newRuleSourceKey, _newRuleTargetKey, StringComparison.Ordinal))
        {
            _errorMessage = "Select two different participants for an exclusion.";
            return;
        }

        var source = FindParticipant(_newRuleSourceKey);
        var target = FindParticipant(_newRuleTargetKey);

        if (source is null || target is null)
        {
            _errorMessage = "Selected participants are no longer available.";
            return;
        }

        try
        {
            var rule = new CustomPairingRuleModel
            {
                SourceUserId = source.UserId,
                SourceInviteeEmail = source.IsEmailOnly ? source.Email : null,
                TargetUserId = target.UserId,
                TargetInviteeEmail = target.IsEmailOnly ? target.Email : null,
                RuleType = "Exclusion",
                RuleDescription = "Cannot be matched together"
            };

            await EventService.AddPairingRuleByPublicIdAsync(Event.PublicId, rule, CurrentUserId);
            await LoadPairingRules();

            _newRuleSourceKey = null;
            _newRuleTargetKey = null;
            _showAddRule = false;
        }
        catch (Exception ex)
        {
            _errorMessage = ex.Message;
        }
    }

    private CustomPairingRuleModel? FindReciprocalRule(CustomPairingRuleModel rule) =>
        _pairingRules.FirstOrDefault(other =>
            other.Id != rule.Id &&
            ParticipantsMatch(rule, other) &&
            string.Equals(other.RuleType, rule.RuleType, StringComparison.OrdinalIgnoreCase));

    private bool IsBidirectional(CustomPairingRuleModel rule) => FindReciprocalRule(rule) != null;

    private async Task EnsureBidirectionalRuleAsync(CustomPairingRuleModel rule)
    {
        if (Event?.PublicId == null ||
            string.IsNullOrEmpty(CurrentUserId) ||
            IsBidirectional(rule) ||
            (!HasParticipantData(rule.SourceUserId, rule.SourceInviteeEmail)) ||
            (!HasParticipantData(rule.TargetUserId, rule.TargetInviteeEmail)))
        {
            return;
        }

        try
        {
            var reciprocalRule = new CustomPairingRuleModel
            {
                SourceUserId = rule.TargetUserId,
                SourceInviteeEmail = rule.TargetInviteeEmail,
                TargetUserId = rule.SourceUserId,
                TargetInviteeEmail = rule.SourceInviteeEmail,
                RuleType = rule.RuleType,
                RuleDescription = string.IsNullOrWhiteSpace(rule.RuleDescription)
                    ? "Cannot be matched together"
                    : rule.RuleDescription
            };

            await EventService.AddPairingRuleByPublicIdAsync(Event.PublicId, reciprocalRule, CurrentUserId);
            await LoadPairingRules();
        }
        catch (Exception ex)
        {
            _errorMessage = ex.Message;
        }
    }

    private async Task ToggleBidirectionalRuleAsync(CustomPairingRuleModel rule)
    {
        if (Event?.PublicId == null ||
            string.IsNullOrEmpty(CurrentUserId) ||
            !HasParticipantData(rule.SourceUserId, rule.SourceInviteeEmail) ||
            !HasParticipantData(rule.TargetUserId, rule.TargetInviteeEmail))
        {
            return;
        }

        var reciprocalRule = FindReciprocalRule(rule);
        if (reciprocalRule is null)
        {
            await EnsureBidirectionalRuleAsync(rule);
            return;
        }

        try
        {
            await EventService.RemovePairingRuleAsync(reciprocalRule.Id, CurrentUserId);
            await LoadPairingRules();
        }
        catch (Exception ex)
        {
            _errorMessage = ex.Message;
        }
    }

    private async Task RemoveRule(int ruleId)
    {
        try
        {
            await EventService.RemovePairingRuleAsync(ruleId, CurrentUserId);
            await LoadPairingRules();
        }
        catch (Exception ex)
        {
            _errorMessage = ex.Message;
        }
    }

    private async Task ResetGiftExchange()
    {
        if (Event?.PublicId == null) return;

        _resetting = true;
        _resetErrorMessage = null;

        try
        {
            await EventService.ResetGiftExchangeByPublicIdAsync(Event.PublicId, CurrentUserId);
            await OnNamesDrawn.InvokeAsync();
            CancelReset();
        }
        catch (Exception ex)
        {
            _resetErrorMessage = ex.Message;
        }
        finally
        {
            _resetting = false;
        }
    }

    private void CancelReset()
    {
        _showResetConfirm = false;
        _showFinalConfirm = false;
        _resetErrorMessage = null;
    }

    private void CancelDrawConfirmation()
    {
        _showDrawConfirm = false;
        _showFinalDrawConfirm = false;
    }

    private ParticipantOption? FindParticipant(string key) =>
        _participants.FirstOrDefault(p => string.Equals(p.Key, key, StringComparison.Ordinal));

    private static string FormatRuleParticipant(CustomPairingRuleModel rule, bool isSource)
    {
        var user = isSource ? rule.SourceUser : rule.TargetUser;
        var inviteeEmail = isSource ? rule.SourceInviteeEmail : rule.TargetInviteeEmail;
        var userId = isSource ? rule.SourceUserId : rule.TargetUserId;

        return user?.UserName
            ?? user?.Email
            ?? inviteeEmail
            ?? (!string.IsNullOrEmpty(userId) ? "Participant" : "Guest");
    }

    private static bool ParticipantsMatch(CustomPairingRuleModel first, CustomPairingRuleModel second)
    {
        return ParticipantEquals(first.SourceUserId, first.SourceInviteeEmail, second.TargetUserId, second.TargetInviteeEmail) &&
               ParticipantEquals(first.TargetUserId, first.TargetInviteeEmail, second.SourceUserId, second.SourceInviteeEmail);
    }

    private static bool ParticipantEquals(string? firstUserId, string? firstEmail, string? secondUserId, string? secondEmail)
    {
        if (!string.IsNullOrEmpty(firstUserId) && string.Equals(firstUserId, secondUserId, StringComparison.Ordinal))
        {
            return true;
        }

        if (!string.IsNullOrWhiteSpace(firstEmail) && !string.IsNullOrWhiteSpace(secondEmail))
        {
            return string.Equals(firstEmail, secondEmail, StringComparison.OrdinalIgnoreCase);
        }

        return false;
    }

    private static bool HasParticipantData(string? userId, string? email) =>
        !string.IsNullOrEmpty(userId) || !string.IsNullOrWhiteSpace(email);

    private sealed record ParticipantOption(string Key, string Label, string? UserId, string? Email)
    {
        public bool IsEmailOnly => string.IsNullOrEmpty(UserId) && !string.IsNullOrWhiteSpace(Email);
    }
}
