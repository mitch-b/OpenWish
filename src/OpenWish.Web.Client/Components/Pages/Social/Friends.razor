@page "/friends"
@using OpenWish.Web.Client.Components.Social
@attribute [Authorize]

@rendermode InteractiveAuto

<PageTitle>Friends</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-12 mb-4">
            <h2>Manage Friends</h2>
            <p class="text-muted">Connect with friends to share and collaborate on wishlists.</p>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Find Friends</h5>
                </div>
                <div class="card-body">
                    <FriendSearch />
                </div>
            </div>
            
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Friend Requests</h5>
                </div>
                <div class="card-body">
                    <FriendRequestList />
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">My Friends</h5>
                </div>
                <div class="card-body">
                    <FriendList />
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    // This page just composes other components, so no code needed here
}